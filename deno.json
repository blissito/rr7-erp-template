{
  "lock": false,
  "tasks": {
    "dev": "deno task react-router:dev",
    "build": "deno task react-router:build",
    "start": "deno task react-router:serve",
    "react-router:dev": "react-router dev",
    "react-router:build": "react-router build",
    "react-router:serve": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && deno check **/*.ts **/*.tsx",
    "verify": "deno run --allow-read --allow-env verify-deno.ts",
    "deploy": "deno task build && deployctl deploy --project=$DENO_PROJECT server.ts"
  },
  "imports": {
    "@react-router/dev": "npm:@react-router/dev@^7.13.0",
    "@react-router/deno": "npm:@react-router/deno@^7.1.3",
    "@react-router/serve": "npm:@react-router/serve@^7.1.3",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "react-router": "npm:react-router@^7.1.3",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "postgres": "npm:postgres@^3.4.8",
    "bcryptjs": "npm:bcryptjs@^2.4.3",
    "clsx": "npm:clsx@^2.1.1",
    "date-fns": "npm:date-fns@^4.1.0",
    "isbot": "npm:isbot@^5.1.17",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2",
    "tailwind-merge": "npm:tailwind-merge@^2.6.0",
    "zod": "npm:zod@^3.24.1",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.0",
    "tailwindcss": "npm:tailwindcss@^4.0.0",
    "vite": "npm:vite@^6.0.7",
    "~/": "./app/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "deno.ns"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "nodeModulesDir": "auto"
}
